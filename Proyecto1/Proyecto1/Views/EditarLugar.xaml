<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1.Views.EditarLugar"
             BackgroundColor="White"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout Margin="20,5,20,0">
            <Frame BackgroundColor="#90A8FF" CornerRadius="20" Margin="20">
                <Label TextColor="white" Text="Editar Casa" FontAttributes="Bold" FontSize="40" HorizontalOptions="Center" Margin="0,20" />
            </Frame>
            <Label TextColor="#333" Text="Longitud"/>
            <Entry TextColor="#333" BackgroundColor="White" x:Name="Longitud" />
            <Label TextColor="#333" Text="Latitud"/>
            <Entry TextColor="#333" BackgroundColor="White" x:Name="Latitud" />
            <Label TextColor="#333" Text="Descripcion"/>
            <Entry TextColor="#333" BackgroundColor="White" x:Name="Descripcion" />
            <Entry TextColor="#333" BackgroundColor="White" x:Name="Direccion" />
            <Button Text="Editar" 
                    x:Name="SaveBtn" 
                    Margin="20,20,20,0" 
                    Clicked="SaveBtn_Clicked" 
                    BackgroundColor="#90FFB5"
                    TextColor="#333"
                    CornerRadius="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>